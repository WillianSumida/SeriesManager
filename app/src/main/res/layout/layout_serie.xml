<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/nomeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/anoLancamentoTv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/anoLancamentoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ano"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/nomeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/emissoraTv" />

    <TextView
        android:id="@+id/generoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emissoraTv"
        app:layout_constraintTop_toBottomOf="@+id/nomeTv" />

    <TextView
        android:id="@+id/emissoraTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emissora"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/generoTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeTv" />

</androidx.constraintlayout.widget.ConstraintLayout>