<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/numeroEpisodioTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Numero Episodio"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nomeEpisodioTv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nomeEpisodioTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome episodio"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/numeroEpisodioTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nomeSerieTv" />

    <TextView
        android:id="@+id/duracaoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Duracao"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nomeSerieTv"
        app:layout_constraintTop_toBottomOf="@+id/nomeEpisodioTv" />

    <TextView
        android:id="@+id/nomeSerieTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome serie"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/duracaoTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeEpisodioTv" />

</androidx.constraintlayout.widget.ConstraintLayout>