<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/nomeSerieTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome Serie"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numeroTemporadaTv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/numeroTemporadaTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temporada"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/nomeSerieTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/qtdeEpisodesTv" />

    <TextView
        android:id="@+id/anoLancamentoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ano Lancamento"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qtdeEpisodesTv"
        app:layout_constraintTop_toBottomOf="@+id/numeroTemporadaTv" />

    <TextView
        android:id="@+id/qtdeEpisodesTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantidade de episodios"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/anoLancamentoTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroTemporadaTv" />

</androidx.constraintlayout.widget.ConstraintLayout>